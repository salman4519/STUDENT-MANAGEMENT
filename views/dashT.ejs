<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        /* Styles as previously given */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }
        .container {
            background-color: #4CAF50;
            padding: 20px;
            color: white;
            text-align: center;
        }
        .admin-dashboard-content {
            padding: 30px;
            text-align: center;
            background-color: #fff;
            margin: 20px auto;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 900px;
        }
        h1 {
            font-size: 36px;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .action-btns {
            display: flex;
            gap: 10px;
        }
        .action-btn {
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .edit-btn {
            background-color: #FF9800;
            color: white;
        }
        .delete-btn {
            background-color: #F44336;
            color: white;
        }
        .logout-btn {
            padding: 10px 20px;
            background-color: #FF5722;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
        }
        .logout-btn:hover {
            background-color: #E64A19;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Welcome to the Admin Dashboard</h1>
</div>

<div class="admin-dashboard-content">
    <h2>User Details</h2>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Place</th>
                <th>Mobile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Loop through users -->
            <% users.forEach(user => { %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.place %></td>
                <td><%= user.mobile %></td>
                <td class="action-btns">
                    <!-- Edit button - No functionality yet -->
                    <a href="/admin/edit/<%= user.name %>" class="action-btn edit-btn">Edit</a>
                    
                    <!-- Delete button -->
                    <form action="/admin/delete/<%= user.name %>" method="POST">
                        <button type="submit" class="action-btn delete-btn">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Logout Button -->
    <form action="/logout" method="POST">
        <button type="submit" class="logout-btn">Logout</button>
    </form>
</div>

</body>
</html>
